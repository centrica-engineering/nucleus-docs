---
const { version, date, type='Nucleus' } = Astro.props;
const sectionId = `${version}`;
const versionLink = `#${type}-${version}`;
---

<div>
  <h3 id={sectionId}>
    Version {version}
    <a aria-hidden="true" tabindex="-1" href={versionLink}><span class="icon icon-link"></span></a>
  </h3>
  <p>Released on {date}</p>
  <slot />
</div>
